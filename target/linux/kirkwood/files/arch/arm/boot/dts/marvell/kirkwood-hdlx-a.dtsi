/dts-v1/;

#include "kirkwood.dtsi"
#include "kirkwood-6282.dtsi"

/ {
	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	memory@0 {
		device_type = "memory";
		reg = <0x00000000 0x10000000>;
	};

	reboot {
		compatible = "iodata,landisk-reboot";
		phy-handle = <&ethphy0>;
	};
};

&eth0 {
	status = "okay";
};

&eth0port {
	phy-handle = <&ethphy0>;
};

&gpio1 {
	/*
	 * these pins are used for board-model detection
	 * on stock firmware of HDL-A/HDL2-A
	 *   0: HDL2-A
	 *   1: HDL-A
	 */
	board-model {
		gpio-hog;
		gpios = <7 GPIO_ACTIVE_HIGH>, <8 GPIO_ACTIVE_HIGH>,
			<9 GPIO_ACTIVE_HIGH>, <10 GPIO_ACTIVE_HIGH>,
			<11 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "board-model";
	};
};

&i2c0 {
	status = "okay";

	rtc@32 {
		compatible = "ricoh,rs5c372a";
		reg = <0x32>;
		/* enable alarm for powering on by Renesas R8C MCU */
		wakeup-source;
	};
};

&mdio {
	status = "okay";

	ethphy0: ethernet-phy@0 {
		compatible = "ethernet-phy-id0141,0e90",
			     "ethernet-phy-ieee802.3-c22";
		reg = <0>;
		/*
		 * LED[0] (Left, Amber): SPEED 1000M
		 * LED[1] (Left, Green): SPEED 100M
		 * LED[2] (Right,Green): LINK/ACT
		 */
		marvell,reg-init = <3 16 0 0x177>;
	};
};

&pinctrl {
	pinctrl-0 = <&pmx_board_model>;
	pinctrl-names = "default";

	pmx_board_model: pmx-board-model {
		marvell,pins = "mpp39", "mpp40", "mpp41", "mpp42",
			       "mpp43";
		marvell,function = "gpio";
	};
};

&rtc {
	status = "disabled";
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		spi-max-frequency = <40000000>;
		reg = <0>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x00000 0x70000>;
				read-only;
			};

			partition@1 {
				label = "u-boot-env";
				reg = <0x70000 0x10000>;
				read-only;
			};
		};
	};
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "okay";

	/*
	 * UART1 is used to connect to the Renesas R8C/25 MCU
	 * but there is no driver.
	 * This MCU provides the following functions:
	 *
	 * - LED
	 *   - Status
	 *   - HDD (HDL2-A only)
	 * - Keys
	 *   - Reset
	 *   - Power
	 * - Beep Speaker
	 *   - controlled by MML (Music Macro Language) syntax
	 * - Temperature sensor
	 * - Fan Control
	 * - Power Off
	 * - Reset
	 */
};

&usb0 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	hub@1 {
		compatible = "usb409,005a";
		reg = <1>;
		#address-cells = <1>;
		#size-cells = <0>;

		port@1 {
			reg = <1>;
		};

		port@2 {
			reg = <2>;
		};
	};
};
